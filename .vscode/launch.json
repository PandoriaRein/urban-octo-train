{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch CryptoGuard Help",
            "program": "${workspaceFolder}/build/CryptoGuard",
            "args": [
                "--help",
            ],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "buildProgram"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch CryptoGuard encrypt",
            "program": "${workspaceFolder}/build/CryptoGuard",
            "args": [
                "--i",
                "input.txt",
                "--o",
                "output.txt",
                "--command",
                "encrypt",
                "--p",
                "1234"
            ],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "buildProgram"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch CryptoGuard decrypt",
            "program": "${workspaceFolder}/build/CryptoGuard",
            "args": [
                "--i",
                "output.txt",
                "--o",
                "input2.txt",
                "--command",
                "decrypt",
                "--p",
                "1234"
            ],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "buildProgram"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch CryptoGuard_tests",
            "program": "${workspaceFolder}/build/CryptoGuard_tests",
            "cwd": "${workspaceFolder}/build"
        }

    ]
}